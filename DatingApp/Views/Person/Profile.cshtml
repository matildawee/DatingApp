@model DatingApp.Models.ProfileViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Profile";
}



@if (SignInManager.IsSignedIn(User))
{
<div class="text-center">
    <img width="200" height="200" @*src="@Url.Action("RenderProfileImage", "Person", new { userId = @Model.PersonId })"*@ />
    <h2>@Model.FirstName @Model.LastName</h2>
    <p>@Model.Description</p>

    @switch (ViewBag.PersonRelation)
    {
        case "Friends":
             <input type="button" class="btn btn-danger" id="FriendBtn" value="Remove Friend"
                    onclick="location.href='@Url.Action("RemoveFriend", "Person", new {id = Model.PersonId })'" />
            break;
        case "IncomingRequest":
            <div>
                <input type="button" class="btn btn-success" id="AcceptBtn" value="Accept"
                       onclick="location.href='@Url.Action("AcceptRequest", "Request", new {id = Model.PersonId })'" />
                <input type="button" class="btn btn-danger" id="DeclineBtn" value="Decline"
                       onclick="location.href='@Url.Action("DeclineRequest", "Request", new {id = Model.PersonId })'" />
            </div>
            break;
        case "OutgoingRequest":
            <input type="button" class="btn btn-warning" id="FriendBtn" value="Cancel Friend Request"
                   onclick="location.href='@Url.Action("CancelRequest", "Request", new {id = Model.PersonId })'" />
            break;
        case "NotFriends":
            <input type="button" class="btn btn-info" id="FriendBtn" value="Friend Request"
                   onclick="location.href='@Url.Action("SendRequest", "Request", new {id = Model.PersonId })'" />
            break;
        default:
            break; // This should never happen
    }
    
</div>
    <div class="col-lg-5" id="PostWall">
        @Html.Partial("/Views/Post/_Post.cshtml", Model.Posts)
        <hr />
    </div>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
